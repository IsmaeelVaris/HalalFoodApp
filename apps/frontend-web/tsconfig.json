{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",                  // React 18 JSX transform
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["../../packages/shared/src/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "../../node_modules/@types"
    ],
    "types": ["react", "react-dom"]
  },
  "include": ["src"]
}
